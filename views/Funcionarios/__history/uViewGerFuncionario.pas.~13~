type
  TfrmGerFuncionario = class(TForm)
    Edit7: TEdit;
    Label17: TLabel;
    Edit6: TEdit;
    Label16: TLabel;
    MaskEdit6: TMaskEdit;
    Label15: TLabel;
    ComboBox3: TComboBox;
